<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".ConfirmActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <TextView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TICKET DETAIL"
                android:fontFamily="sans-serif-black"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:background="@color/white"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:paddingVertical="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stasiun keberangkatan"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:paddingLeft="30dp"/>

                <TextView
                    android:id="@+id/asal_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SOLO"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:paddingLeft="30dp"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stasiun Tujuan"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:paddingLeft="30dp"/>

                <TextView
                    android:id="@+id/tujuan_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JOGJA"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:paddingLeft="30dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Keberangkatan"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:paddingLeft="30dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/tanggal_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21/ 21/ 2021"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:paddingLeft="30dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jam Keberangkatan"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:paddingLeft="30dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/jam_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21:00"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:paddingLeft="30dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:paddingLeft="30dp"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/jenis_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bisnis"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:paddingLeft="30dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_button"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_marginHorizontal="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/button2"
            android:backgroundTint="#98D8AA"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_button"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/button2"
            android:backgroundTint="#FF6969"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>